<article class="<%= item.layout %>">
  <% if (item.photos && item.photos.length){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <% if (item.layout != 'page'){ %>
        <div class="icon"></div>
        <time class="txs--h6" datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
      <% } %>
      <%- partial('post/title') %>
    </header>
    <% if (!archive) { %>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
    <% } %>
    <footer class="post-footer txs--grid">
      <div class="txs--grid__row">
        <% if (!archive && item.excerpt && index){ %>
        <div class="txs--grid__column">
            <a class="txs--a" href="<%- config.root %><%- item.path %>#more" class="more-link"><%= __('more') %></a>
        </div>
        <% } %>
        <div class="txs--grid__column txs--p">
            <%- partial('post/category') %>
            <%- partial('post/tag') %>
        </div>
    </footer>
  </div>
  <hr class="txs--hr">
</article>
