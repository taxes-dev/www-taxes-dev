#sidebar
  order 1
  flex-basis 25%
  margin-left 1em
  line-height 1.8em
  .widget
    background rgba(0, 0, 0, 0.65)
    border-radius 12px
    margin-bottom 30px
    word-wrap break-word
    .title
      padding 15px 20px
      font-size 1em
      border-bottom 1px dotted color-border
      font-weight normal

    .entry
      font-size 0.9em
      padding 15px 20px

    ul, ol, dl
      list-style none
      ul, ol, dl
        list-style disc
        margin-left 20px

  .search
    margin-bottom 30px
    input
      background rgba(0,0,0,0.65)
      border-radius 12px
      font-family font-title
      font-style italic
      font-size 1em
      padding 10px 15px
      border 0
      width 100%
      box-sizing border-box
      color color-font
      &:focus
        color #ddd

  .tag
    small
      margin-left 15px
      color color-meta
      &:before
        content '('
      &:after
        content ')'

  .twitter
    li
      border-bottom 1px solid color-border
      padding 15px 20px
      font-size 0.9em
      &:last-of-type
        border-bottom none
    small
      display block
      margin-top 10px
      color color-meta
      line-height 1

  .tagcloud
    .entry
      padding-right 5px
    a
      margin-right 10px
      display inline-block
