#header
  margin 35px auto
  align-items center
  @media screen and (max-width: 1260px)
    width 100%

  #site-title
    order 0
    flex-basis 50%
  
  a
    color color-meta
    &:hover
      color color-link
      text-decoration none

  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px

  #main-nav
    order 1
    flex-basis 50%
    font-family font-title
    line-height 2.5em
    ul
      float right
      list-style none
      li
        float left
        margin-left 30px
