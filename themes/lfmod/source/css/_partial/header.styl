#header
  margin 35px auto
  align-items center
  text-shadow 1px 1px 1px rgba(0,0,0,0.5)
  @media screen and (max-width: 1260px)
    width 100%

  #site-title
    order 0
    flex-basis 50%
  
  a
    color rgba(0, 0, 0, 0.65)
    &:hover
      color rgba(0, 0, 0, 0.65)
      text-decoration none

  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px

  #main-nav
    order 1
    flex-basis 50%
    font-family font-title
    line-height 2.5em
    ul
      float right
      list-style none
      li
        float left
        margin-left 30px
