<article class="<%= item.layout %>">
  <% if (item.photos && item.photos.length){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
      <% if (item.layout != 'page'){ %>
        <div class="icon"></div>
        <time datetime="<%= item.date.toDate().toISOString() %>"><a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a></time>
      <% } %>
      <%- partial('post/title') %>
    </header>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>
        <%- item.content %>
      <% } %>
    </div>
    <% if (item.excerpt && index){ %>
    <footer>
      <div class="alignleft">
        <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= __('more') %></a>
      </div>
    </footer>
    <% } %>
    <footer>
        <div class="alignright">
          <% if (false && item.comments){ %>
          <a href="<%- url_for(item.path) %>#comment" class="comment-link">评论</a>
          <% } %>
        </div>
        <%- partial('post/category') %>
        <%- partial('post/tag') %>
      <div class="clearfix"></div>
    </footer>
  </div>
</article>

<% if (false) { %>
<%- partial('comment', {post: item}) %>
<% } %>